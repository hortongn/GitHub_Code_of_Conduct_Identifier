<p id="notice"><%= notice %></p>

<h1>Repositories</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Name</th>
      <th>Url</th>
      <th>Set</th>
      <th>Stars</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.login %></td>
        <td><%= repository.name %></td>
        <td><a href="https://github.com/<%= repository.login %>/<%= repository.name %>">https://github.com/<%= repository.login %>/<%= repository.name %></a></td>
        <td><%= repository.repository_set.nil? ? '<none>' : repository.repository_set.name %></td>
        <td><%= repository.stars %></td>
        <td><%= repository.description %></td>
        <td><%= link_to 'Show', repository %></td>
        <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
        <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Repository', new_repository_path %>
